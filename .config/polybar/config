[colors]
background = ${xrdb:polybar.background:#881A0A0A}
foreground = ${xrdb:polybar.foreground:#CCCCCC}

module-bg = ${xrdb:polybar.moduleBg}
module-fg = ${xrdb:polybar.moduleFg}

; TODO: change this:
background-alt = #444444
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/default]
width = 100%
height = 34
font-0 = ${xrdb:polybar.primaryFont:"iosevka:size=12;2"}
font-1 = "Font Awesome 5 Free Solid:size=11:style=Solid;2"
font-2 = "Noto Sans CJK JP:size=11;2"
font-3 = "Inconsolata Nerd Font Mono:size=18;3"
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = ${xrdb:polybar.paddingLeft:2}
padding-right = ${xrdb:polybar.paddingRight:3}
line-size = ${xrdb:polybar.underlineSize:0}

wm-restack = bspwm
; override-redirect = true

modules-left = ${xrdb:polybar.modulesLeft:desktop-icons}
modules-center = ${xrdb:polybar.modulesCenter:date}
modules-right = ${xrdb:polybar.modulesRight:battery cpu network spotify}
module-margin-left = ${xrdb:polybar.moduleMarginLeft:2}
module-margin-right = ${xrdb:polybar.moduleMarginRight:2}
separator = ${xrdb:polybar.moduleSeparator:}

; offset-x = 10
; offset-y = 10
; width = 100%:-20

enable-ipc = true

; tray-position = right
; tray-detached = true

[bar/smaller]
inherit = bar/default
height = 30
font-0 = ${xrdb:polybar.primaryFont:"iosevka:size=12;2"}
font-1 = "Font Awesome 5 Free Solid:size=11:style=Solid;2"
font-2 = "Noto Sans CJK JP:size=11;2"
font-3 = "Inconsolata Nerd Font Mono:size=18;3"

[module/separators]
type = custom/text
content-font = 4
content-foreground = ${colors.module-bg}

[module/mprefix-0]
inherit = module/separators
content =

[module/msuffix-0]
inherit = module/separators
content =

[module/mprefix-1]
inherit = module/separators
content = "%{R} %{R-}"

[module/msuffix-1]
inherit = module/separators
content = "%{R} %{R-}"

[module/mprefix-2]
inherit = module/separators
content = "%{R} %{R-}"

[module/msuffix-2]
inherit = module/separators
content = "%{R} %{R-}"

[module/mprefix-3]
inherit = module/separators
content = " %{R} %{R-}"

[module/msuffix-3]
inherit = module/separators
content = "%{R} %{R-}"

[module/cpu]
type = internal/cpu
label = %percentage%%
label-underline = ${xrdb:ansi.color5}
interval = 4
format-background = ${colors.module-bg}
format-foreground = ${colors.module-fg}

[module/network]
type = internal/network
interface = ${env:NETWORK_INTERFACE:wlan0}
format-connected-underline = ${xrdb:ansi.color4}
label-connected = %{A1:connman-gtk:}%{A}
label-disconnected = %{F#FF3333}%{A1:connman-gtk:}%{F- A}

format-connected-background = ${colors.module-bg}
format-connected-foreground = ${colors.module-fg}
format-disconnected-background = ${colors.module-bg}
format-disconnected-foreground = ${colors.module-fg}

[module/battery]
type = internal/battery
poll-interval = 10

time-format = %H:%M

; Once this issue is fixed, change the battery icon color
; depending on its state:
; https://github.com/polybar/polybar/issues/1623
format-full = <ramp-capacity>  <label-full>
format-charging = <ramp-capacity>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full-underline = ${xrdb:ansi.color2}
format-charging-underline = ${xrdb:ansi.color3}

format-full-background = ${colors.module-bg}
format-charging-background = ${colors.module-bg}
format-discharging-background = ${colors.module-bg}
format-full-foreground = ${colors.module-fg}
format-charging-foreground = ${colors.module-fg}
format-discharging-foreground = ${colors.module-fg}

label-full = %percentage%%  (%time%)
label-charging = %percentage%%  (%time%)
label-discharging = %percentage%%  (%time%)

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/date]
type  = internal/date
label = "    %time%   %date%"
date  = %b %d, %Y
time  = %I:%M %p
date-alt  = %a. %b %d, %Y
time-alt  = %I:%M:%S %p

[module/date-module]
type  = internal/date
label = %date% | %time%
date  = %b %d
time  = %I:%M %p
format-background = ${colors.module-bg}
format-foreground = ${colors.module-fg}

[module/spotify]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/spotify.sh
click-left = wmctrl -xa spotify

; TODO: why does this break w/ format-background/foreground???
format = <label>
format-padding = 2
; format-background = ${colors.module-bg}
; format-foreground = ${colors.module-fg}

[module/desktop-icons]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;

pin-workspaces = false
enable-scroll = false

label-separator = "     "
label-separator-padding = 0

label-focused = %name%  %icon%
label-focused-foreground = ${xrdb:polybar.focusedDesktop:#ABD94C}
label-occupied = %name%  %icon%
label-empty =

[module/all-desktops]
inherit = module/desktop-icons

label-separator =
label-focused = " %name% "
label-focused-foreground = ${xrdb:ansi.color0}
label-focused-background = ${xrdb:polybar.focusedDesktop}
label-occupied = " %name% "
label-empty = " %name% "

[module/all-desktops-wide]
inherit = module/all-desktops
label-focused = "  %name%  "
label-occupied =  "  %name%  "
label-empty = "  %name%  "

