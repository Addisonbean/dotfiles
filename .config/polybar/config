[colors]
background = ${xrdb:polybar.background:#881A0A0A}
foreground = ${xrdb:polybar.foreground:#CCCCCC}

module-bg = ${xrdb:polybar.moduleBg}
module-fg = ${xrdb:polybar.moduleFg}

; TODO: change this:
background-alt = #444444
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/default]
width = 100%
height = 34
font-0 = ${xrdb:polybar.primaryFont:"iosevka:size=12;2"}
font-1 = "Font Awesome 5 Free Solid:size=11:style=Solid;2"
font-2 = "Noto Sans CJK JP:size=11;2"
font-3 = "Inconsolata Nerd Font Mono:size=18;3"
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 2
padding-right = 3
line-size = ${xrdb:polybar.underlineSize:0}

wm-restack = bspwm
; override-redirect = true

modules-left = bspwm
modules-center = date
; modules-right = start-bslash battery end-bslash start-bslash cpu end-bslash start-bslash network end-bslash spotify
modules-right = battery cpu network spotify
module-margin-left = ${xrdb:moduleMarginLeft:2}
module-margin-right = ${xrdb:moduleMarginRight:2}
separator = ${xrdb:polybar.moduleSeparator:}

enable-ipc = true

; tray-position = right
; tray-detached = true

[bar/all-ws]
inherit = bar/default
modules-left = bspwm-all-ws
; module-margin-left = 2
; module-margin-right = 0

[module/separators]
type = custom/text
content-font = 4
content-background = ${colors.module-bg}
content-foreground = ${colors.background}

[module/start-fslash]
inherit = module/separators
content = ${xrdb:polybar.noFslash: }

[module/end-fslash]
inherit = module/separators
content = ${xrdb:polybar.noFslash: }

[module/start-bslash]
inherit = module/separators
content = ${xrdb:polybar.noBslash: }

[module/end-bslash]
inherit = module/separators
content = ${xrdb:polybar.noBslash: }

[module/cpu]
type = internal/cpu
label = CPU %percentage%%
label-underline = ${xrdb:ansi.color5}
interval = 4
format-background = ${colors.module-bg}
format-foreground = ${colors.module-fg}

[module/network]
type = internal/network
interface = ${env:NETWORK_INTERFACE:wlp2s0}
format-connected-underline = ${xrdb:ansi.color4}
label-connected = %{A1:st -e nmtui:}%{A}
label-disconnected = %{F#FF3333}%{A1:st -e nmtui:}%{F- A}

format-connected-background = ${colors.module-bg}
format-connected-foreground = ${colors.module-fg}
format-disconnected-background = ${colors.module-bg}
format-disconnected-foreground = ${colors.module-fg}

[module/battery]
type = internal/battery
battery = BAT1
poll-interval = 10

time-format = %H:%M

; I think format full is broken atm... (and charging???)
format-full = %{F#cbd14f} <ramp-capacity> %{F-}<label-full>
format-charging = %{F#cbd14f} <ramp-capacity> %{F-}<label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full-underline = ${xrdb:ansi.color2}
format-charging-underline = ${xrdb:ansi.color3}

format-full-background = ${colors.module-bg}
format-charging-background = ${colors.module-bg}
format-discharging-background = ${colors.module-bg}
format-full-foreground = ${colors.module-fg}
format-charging-foreground = ${colors.module-fg}
format-discharging-foreground = ${colors.module-fg}

label-full = %percentage%% (%time%)
label-charging = %percentage%% (%time%)
label-discharging = %percentage%% (%time%)

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/date]
type  = internal/date
label = "    %time%   %date%"
date  = %b %d, %Y
time  = %I:%M %p
date-alt  = %a. %b %d, %Y
time-alt  = %I:%M:%S %p

[module/spotify]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/spotify.sh
click-left = wmctrl -xa spotify

; TODO: why does this break w/ format-background/foreground???
format = <label>
format-padding = 2
; format-background = ${colors.moduleBg}
; format-foreground = ${colors.moduleFg}

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;

pin-workspaces = false
enable-scroll = false

label-separator = "  "
label-separator-padding = 0

label-focused = %name% %icon%
label-focused-foreground = ${xrdb:polybar.focusedDesktop:#ABD94C}
label-occupied = %name% %icon%
label-empty =

[module/bspwm-all-ws]
inherit = module/bspwm

label-separator =
label-focused = " %name% "
label-focused-foreground = ${xrdb:ansi.color0}
label-focused-background = ${xrdb:polybar.focusedDesktop}
label-occupied = " %name% "
label-empty = " %name% "

