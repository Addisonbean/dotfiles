! Mainly song titles + playlist names
#ifndef SPOTIFY_TEXT
#define SPOTIFY_TEXT COLOR_WHITE
#endif

! Most text besides song titles and playlist names
#ifndef SPOTIFY_SUBTEXT
#define SPOTIFY_SUBTEXT COLOR_WHITE
#endif

! Most backgrounds
#ifndef SPOTIFY_MAIN
#define SPOTIFY_MAIN COLOR_B_BLACK
#endif

! The background behind the sections and stuff
#ifndef SPOTIFY_SIDEBAR
#define SPOTIFY_SIDEBAR COLOR_BLACK
#endif

! Not sure where this is used except when loading the home page
#ifndef SPOTIFY_PLAYER
#define SPOTIFY_PLAYER COLOR_BLACK
#endif

! The bg color of popups (ex. when editing a playlist), empty playlist bg color
#ifndef SPOTIFY_CARD
#define SPOTIFY_CARD SPOTIFY_MAIN
#endif

#ifndef SPOTIFY_SHADOW
#define SPOTIFY_SHADOW COLOR_BLACK
#endif

! Used for friends feed text, selected songs, hovered songs, and small buttons
#ifndef SPOTIFY_SELECTED_ROW
#define SPOTIFY_SELECTED_ROW COLOR_WHITE
#endif

! Used for active buttons and volume slider
#ifndef SPOTIFY_BUTTON
#define SPOTIFY_BUTTON COLOR_GREEN
#endif

! Used for playing on another device bar, the hover state of active buttons, and the play/pause button on playlists/albums, and the title of the current song
#ifndef SPOTIFY_BUTTON_ACTIVE
#define SPOTIFY_BUTTON_ACTIVE COLOR_GREEN
#endif

! Border of active input box (like when editing a playlist name or description)
#ifndef SPOTIFY_BUTTON_DISABLED
#define SPOTIFY_BUTTON_DISABLED COLOR_GREEN
#endif

! Used for the bg of loading album covers
#ifndef SPOTIFY_TAB_ACTIVE
#define SPOTIFY_TAB_ACTIVE COLOR_BLACK
#endif

! Used for indicating if friends are actively listening to something
#ifndef SPOTIFY_NOTIFICATION
#define SPOTIFY_NOTIFICATION COLOR_GREEN
#endif

! TODO: How does this look?
#ifndef SPOTIFY_NOTIFICATION_ERROR
#define SPOTIFY_NOTIFICATION_ERROR COLOR_RED
#endif

! Color of music note in empty playlist covers
#ifndef SPOTIFY_MISC
#define SPOTIFY_MISC COLOR_YELLOW
#endif

*spotify_text: SPOTIFY_TEXT
*spotify_subtext: SPOTIFY_SUBTEXT
*spotify_main: SPOTIFY_MAIN
*spotify_sidebar: SPOTIFY_SIDEBAR
*spotify_player: SPOTIFY_PLAYER
*spotify_card: SPOTIFY_CARD
*spotify_shadow: SPOTIFY_SHADOW
*spotify_selected_row: SPOTIFY_SELECTED_ROW
*spotify_button: SPOTIFY_BUTTON
*spotify_button_active: SPOTIFY_BUTTON_ACTIVE
*spotify_button_disabled: SPOTIFY_BUTTON_DISABLED
*spotify_tab_active: SPOTIFY_TAB_ACTIVE
*spotify_notification: SPOTIFY_NOTIFICATION
*spotify_notification_error: SPOTIFY_NOTIFICATION_ERROR
*spotify_misc: SPOTIFY_MISC

