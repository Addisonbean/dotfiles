#ifndef BSPWM_BORDER_SIZE
#define BSPWM_BORDER_SIZE 2
#endif

#ifndef BSPWM_NORMAL_BORDER
#define BSPWM_NORMAL_BORDER #33415E
#endif

#ifndef BSPWM_FOCUSED_BORDER
#define BSPWM_FOCUSED_BORDER #BBBBBB
#endif

#ifndef BSPWM_GAP
#define BSPWM_GAP 15
#endif

#ifndef BSPWM_GAPLESS_MONOCLE
#define BSPWM_GAPLESS_MONOCLE true
#endif

bspwm.borderSize: BSPWM_BORDER_SIZE
bspwm.normalBorder: BSPWM_NORMAL_BORDER
bspwm.focusedBorder: BSPWM_FOCUSED_BORDER
bspwm.gap: BSPWM_GAP
bspwm.gaplessMonocle: BSPWM_GAPLESS_MONOCLE

